@model SignatureClinicTreatmentPlanner.Models.LoginViewModel


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>Login</title>

    <!-- Bootstrap & Icons -->
    <link href="~/content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/content/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">

    <style>
        body {
            font-family: "Open Sans", sans-serif;
            /*background: url('/images/login-bg.jpg') no-repeat center center fixed;*/
            background-size: cover;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .login-container {
            background: rgba(255, 255, 255, 0.9);
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            width: 350px;
            text-align: center;
        }

        .login-title {
            font-size: 22px;
            font-weight: 700;
            color: #012970;
            margin-bottom: 20px;
        }

        .input-group {
            margin-bottom: 15px;
        }

            .input-group .form-control {
                height: 45px;
                font-size: 16px;
            }

        .login-btn {
            background-color: #4154f1;
            border: none;
            color: white;
            width: 100%;
            padding: 12px;
            font-size: 16px;
            border-radius: 5px;
            transition: 0.3s;
        }

            .login-btn:hover {
                background-color: #5969f3;
            }

        .forgot-password {
            display: block;
            margin-top: 10px;
            color: #4154f1;
            text-decoration: none;
        }

            .forgot-password:hover {
                text-decoration: underline;
            }

        .form-label {
            display: block;
            font-weight: bold;
            text-align: left;
            margin-bottom: 5px;
        }


        .lds-facebook,
        .lds-facebook div {
            box-sizing: border-box;
        }

        .lds-facebook {
            display: inline-block;
            position: relative;
            width: 80px;
            height: 80px;
        }

            .lds-facebook div {
                display: inline-block;
                position: absolute;
                left: 8px;
                width: 16px;
                background: currentColor;
                animation: lds-facebook 1.2s cubic-bezier(0, 0.5, 0.5, 1) infinite;
            }

                .lds-facebook div:nth-child(1) {
                    left: 8px;
                    animation-delay: -0.24s;
                }

                .lds-facebook div:nth-child(2) {
                    left: 32px;
                    animation-delay: -0.12s;
                }

                .lds-facebook div:nth-child(3) {
                    left: 56px;
                    animation-delay: 0s;
                }

        .lds-facebook {
            0%

        {
            top: 8px;
            height: 64px;
        }

        50%, 100% {
            top: 24px;
            height: 32px;
        }

        }

        #spinner {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 1000;
        }

    </style>
    
</head>

<body>
    <div class="login-container">
        <h4 class="login-title">Login to Your Account</h4>

        <!-- 🔹 Razor form submitting to LoginController -->
        <form class="row g-3" asp-action="Index" asp-controller="Login" method="post">
            <div class="col-12 text-start">
                <label asp-for="UserName" class="form-label">Username</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-person"></i></span>
                    <input asp-for="UserName" class="form-control" required placeholder="User Name" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>

            <div class="col-12 text-start">
                <label asp-for="Password" class="form-label">Password</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                    <input asp-for="Password" class="form-control" type="password" required placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <div class="col-12">
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label"> Remember me</label>
                </div>
            </div>

            <div class="col-12">
                <button class="login-btn" type="submit">Login</button>
            </div>

            <div class="col-12">
                <a href="/Account/ForgotPassword" class="forgot-password">Forgot password?</a>
            </div>
        </form>
        <!-- Display login errors -->
        @if (ViewBag.Error != null)
        {
            <p class="text-danger text-center">@ViewBag.Error</p>
        }
    </div>
</body>

</html>
