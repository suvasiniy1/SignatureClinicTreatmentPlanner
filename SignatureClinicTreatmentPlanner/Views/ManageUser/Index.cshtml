@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; // Ensure it uses the correct layout
}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- DataTables CSS & JS -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

<h4>User Management</h4>
<hr />

<div class="container">
    <!-- Top Bar with Add User and Search -->
    <div class="row mb-3">
        <div class="col-md-6">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addUserModal">
                Add New User
            </button>
        </div>
        <div class="col-md-6 text-end">
            <input id="txtUserName" type="text" placeholder="Search..." class="form-control d-inline-block w-auto" />
            <button id="btnClear" type="button" class="btn btn-outline-warning">Clear</button>
        </div>
    </div>

    <!-- User Table -->
    <table class="table table-bordered" id="tblUser">
        <thead>
            <tr>
                <th>User Name</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Active?</th>
                <th>Actions</th>
            </tr>
        </thead>
    </table>
</div>

<!-- Add User Modal -->
<div class="modal fade" id="addUserModal" tabindex="-1" aria-labelledby="addUserModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="userForm">
                    <div class="mb-3">
                        <label>User Name</label>
                        <input type="text" class="form-control" id="UserName" required />
                    </div>
                    <div class="mb-3">
                        <label>Password</label>
                        <input type="password" class="form-control" id="Password" required />
                    </div>
                    <div class="mb-3">
                        <label>Email</label>
                        <input type="email" class="form-control" id="EmailID" required />
                    </div>
                    <div class="mb-3">
                        <label>Role</label>
                        <select class="form-select" id="RoleDropdown">
                            <option value="">Select a Role</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label>Status</label>
                        <input type="checkbox" id="IsActive" checked />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="saveUser()">Save User</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
          LoadUsers();
         LoadRoles();
        $("#txtUserName").on("keyup", function () {
            $("#tblUser").DataTable().search(this.value).draw();
        });
        $("#btnClear").click(function () {
            $("#txtUserName").val("");
            $("#tblUser").DataTable().search("").draw();
        });
       
    });
        function LoadRoles() {
        $.get("/ManageUser/GetRoles", function (response) {
            if (response.success) {
                $("#RoleDropdown").empty().append('<option value="">Select a Role</option>');
                $.each(response.data, function (index, role) {
                    $("#RoleDropdown").append(`<option value="${role.id}">${role.name}</option>`);
                });
            } else {
                console.error("Failed to load roles:", response.message);
            }
        });
    }

                function LoadUsers() {
        if ($.fn.DataTable.isDataTable("#tblUser")) {
            $("#tblUser").DataTable().destroy();
        }
        $("#tblUser").DataTable({
            "ajax": {
                "url": "/ManageUser/GetUsers",
                "type": "GET",
                "datatype": "json",
                "dataSrc": "data"
            },
            "columns": [
                { "data": "userName", "title": "User Name" },  // ✅ Lowercase to match API
                { "data": "firstName", "title": "First Name" },
                { "data": "lastName", "title": "Last Name" },
                { "data": "email", "title": "Email" },
                { "data": "roleName", "title": "Role" },
                { "data": "isActive", "title": "Active?", "render": function (data) {
                    return data ? "Active" : "Inactive";
                }},
                {
                    "data": "id", "render": function (data) {  // ✅ Ensure lowercase "id"
                        return `
                            <button class='btn btn-warning btn-sm' onclick='editUser(${data})'>Edit</button>
                            <button class='btn btn-danger btn-sm' onclick='deleteUser(${data})'>Delete</button>`;
                    }
                }
            ]
        });
    }

    function saveUser() {
        let userData = {
            UserName: $("#UserName").val(),
            Password: $("#Password").val(),
            EmailID: $("#EmailID").val(),
            RoleId: $("#RoleDropdown").val(),
            IsActive: $("#IsActive").is(":checked")
        };
        $.post("/ManageUser/Create", userData, function (response) {
            if (response.success) {
                $("#addUserModal").modal("hide");
                LoadUsers();
                alert("User added successfully!");
            } else {
                alert("Error: " + response.message);
            }
        });
    }

                       function LoadRoles() {
        $.get("/ManageUser/GetRoles", function (response) {
            console.log("API Response:", response); // ✅ Debugging API response

            if (response.success) {
                $("#RoleDropdown").empty().append('<option value="">Select a Role</option>');

                response.data.forEach(function (role, index) {
                    console.log(`Role ${index}:`, role); // ✅ Log each role
                    console.log("ID:", role.Id, "RoleName:", role.RoleName); // ✅ Check if properties exist

                    $("#RoleDropdown").append(`<option value="${role.Id}">${role.RoleName}</option>`);
                });
            } else {
                console.error("Failed to load roles:", response.message);
            }
        });
    }

        // Call LoadRoles when modal opens
    $('#addUserModal').on('show.bs.modal', function () {
        LoadRoles();
    });
    function deleteUser(id) {
        if (confirm("Are you sure you want to delete this user?")) {
            $.post("/ManageUser/Delete", { id: id }, function (response) {
                if (response.success) {
                    LoadUsers();
                    alert("User deleted successfully!");
                } else {
                    alert("Error: " + response.message);
                }
            });
        }
    }
</script>

