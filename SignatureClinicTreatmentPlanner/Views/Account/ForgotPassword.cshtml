@{
    ViewBag.Title = "Forgot Password";
}

<h2>Forgot Password</h2>

<form asp-action="ForgotPassword" method="post">
    <div>
        <label>Email</label>
        <input type="email" name="email" required />
    </div>
    <button type="submit">Submit</button>
</form>

@if (ViewBag.Message != null)
{
    <p>@ViewBag.Message</p>
}
